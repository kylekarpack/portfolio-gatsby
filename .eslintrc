{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"parser": "babel-eslint",
    "parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
    },
    "rules": {
        "indent": [
            "error",
            "tab"
		],
		"linebreak-style": "off",
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
		],
		"react/prop-types": "off"
		
    }
}